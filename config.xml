<?xml version='1.0' encoding='utf-8'?>
<widget id="com.airelibre.app" version="1.0.0" xmlns="http://www.w3.org/ns/widgets" xmlns:cdv="http://cordova.apache.org/ns/1.0">
    <name>AireLibre</name>
    <description>
        A sample Apache Cordova application that responds to the deviceready event.
    </description>
    <author email="john@tallerdecodigo.com" href="http://tallerdecodigo.com">
        John Falcon for TDC
    </author>
    <content src="index.html" />
    <plugin name="cordova-plugin-whitelist" spec="1" />
    <access origin="*" />
    <allow-intent href="http://*/*" />
    <allow-intent href="https://*/*" />
    <allow-intent href="tel:*" />
    <allow-intent href="sms:*" />
    <allow-intent href="mailto:*" />
    <allow-intent href="geo:*" />
    <access origin="https://*/*" />
    <access origin="https://*.google.com" />
    <access origin="https://*.googleapis.com" />
    <access origin="https://*.gstatic.com" />

    <platform name="android">
        <allow-intent href="market:*" />
        <allow-navigation href="http://*" />
        <allow-navigation href="http://airelibre.devtdc.online/*" />
    </platform>
    <platform name="ios">
        <allow-intent href="itms:*" />
        <allow-intent href="itms-apps:*" />
    </platform>

    
    <preference name="Orientation" value="portrait" />
    <preference name="SplashMaintainAspectRatio" value="true" />
    <preference name="FadeSplashScreenDuration" value="1500"/>
    <preference name="SplashScreenDelay" value="3500" />
</widget>

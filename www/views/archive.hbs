		{{> header}}
		{{> sidemenu}}
		
		<section class="posts first-section">
		{{# each data.pool}}
			{{# if columna}}
				<articleclass="grid-item normal columna">
					<a class="grid-link hook single-column"  data-id="{{ID}}" href="#">
						<div class="img-wrapper"><img src="{{thumb}}"></div>
						<div class="art-title"><span>{{title}}</span></div>
						<div class="art-descr">{{excerptc}}</div>
					</a>
				</article>
			{{/ if }}

			{{# if podcast}}
				<article data-id="{{ID}}" class="grid-item podcast hook single-podcast">
					<div class="pod-img">
						<img src="{{thumb_url}}">
						<span>{{programa}} - {{title}}</span>
					</div>
					<div class="pod-title">{{excerpt}}</div>
				</article>
			{{/ if }}
		{{/ each }}
		</section>
	<section class="view">
		{{> header}}
		{{> sidemenu}}

		<header class="white-bar">
			<div class="toolbar">
				<a class="head-btn menu"><svg viewBox="0 0 42 42"><use xlink:href="#menu"></use></svg></a>
				<h2 class="titulo">INICIO</h2>
				<a class="head-btn search"><svg viewBox="0 0 42 42"><use xlink:href="#search"></use></svg></a>
			</div>
		</header>
		<section class="index first-section">
			<a class="in-boton hook radio">
				<img src="images/menu1.png">
				<div class="btn-txt">
					<h3>RADIO</h3>
					<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec dignissim magna tempor urna condimentum.</p>
				</div>
				<svg viewBox="0 0 50 50" class="red"><use xlink:href="#play"></use></svg>
			</a>
			<a class="in-boton hook podcast">
				<img src="images/menu2.png">
				<div class="btn-txt">
					<h3>PODCAST</h3>
					<p>Lorem ipsum dolor sit amet, consectetur adipiscing elit. Donec dignissim magna tempor urna condimentum.</p>
				</div>
				<svg viewBox="0 0 50 50" class="blue"><use xlink:href="#play"></use></svg>
			</a>
			{{# each data.pool}}
				<a class="in-boton hook single-column" data-id="{{ID}}" >
					<img src="images/menu3.png">
					<div class="btn-txt">
						<h3>{{title}}</h3>
					</div>
				</a>
			{{/ each }}

		</section>
	</section>
	<section class="insert_playing">	
		{{> nowplaying}}
	</section>